pkgname=afl
pkgver=2.39b
pkgrel=1
pkgdesc='Security-oriented fuzzer using compile-time instrumentation and genetic algorithms'
url='http://lcamtuf.coredump.cx/afl/'
arch=('i686' 'x86_64')
license=('Apache')
depends=('glibc' 'bash' 'clang' 'llvm')
optdepends=('gcc: gcc instrumentation support'
            'gnuplot: graph plotting support')
makedepends=('gcc' 'wget' 'python' 'python2' 'libtool' 'automake' 'autoconf' 'coreutils' 'bison')
provides=('american-fuzzy-lop')
replaces=('american-fuzzy-lop')
options=('!emptydirs' '!strip')
source=(${pkgname}-${pkgver}.tgz::http://lcamtuf.coredump.cx/${pkgname}/releases/${pkgname}-${pkgver}.tgz)

prepare() {
  cd ${pkgname}-${pkgver}/qemu_mode
}

build() {
  cd ${pkgname}-${pkgver}
  export CC=clang
  export CXX=clang++
  export AFL_NO_X86=1
  make PREFIX=/usr
  make -C llvm_mode PREFIX=/usr
  cd qemu_mode
  ./build_qemu_support.sh
  cd ..
}

package() {
  cd ${pkgname}-${pkgver}
  AFL_NO_X86=1 make PREFIX=/usr DESTDIR="${pkgdir}" install
  install -Dm 644 llvm_mode/README.llvm -t "${pkgdir}/usr/share/doc/${pkgname}"
}

